<!DOCTYPE html>
<html>
<head>
    <title>Conversor YouTube para MP4</title>
</head>
<body>
    <h1>Conversor de YouTube para MP4</h1>
    @if (ViewBag.Error != null)
    {
        <p style="color: red;">@ViewBag.Error</p>
    }
    @if (ViewBag.Success != null)
    {
        <p style="color: green;">@ViewBag.Success</p>
    }
    <form id="convert-form">
        <label for="videoUrl">Insira o link do YouTube:</label><br />
        <input type="text" id="videoUrl" name="VideoUrl" placeholder="https://www.youtube.com/watch?v=..." required /><br /><br />
        <button type="button" id="convert-button" onclick="startConversion()">Converter</button>

    </form>

    <div id="progress-container" style="display: none;">
        <div id="progress-bar" style="width: 0%; height: 20px; background-color: green;"></div>
    </div>
    <p id="progress-text" style="display: none;">0%</p>

</body>
</html>
